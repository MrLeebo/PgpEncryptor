<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.4</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>0.1.0</Version>
    <Authors>MrLeebo</Authors>
    <Company>LeeboLand</Company>
    <PackageReleaseNotes>- First Release!</PackageReleaseNotes>
    <Description>Bouncy Castle PGP Encryption implementation that uses streams and buffers to handle large files without copying everything into memory at once.</Description>
    <PackageLicenseUrl>https://github.com/MrLeebo/PgpEncryptor/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/MrLeebo/PgpEncryptor</PackageProjectUrl>
    <RepositoryUrl>https://github.com/MrLeebo/PgpEncryptor</RepositoryUrl>
    <PackageTags>PGP Encryption</PackageTags>
    <PackageId>LeeboLand.PgpEncryptor</PackageId>
    <AssemblyName>PgpEncryptor</AssemblyName>
    <RootNamespace>PgpEncryptor</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="PgpEncryptor.nuspec" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BouncyCastle.NetCore" Version="1.8.1.3" />
  </ItemGroup>

</Project>